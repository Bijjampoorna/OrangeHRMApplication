package com.Utility;

import org.apache.log4j.Logger;
import org.apache.log4j.PropertyConfigurator;

public class Log 
{

	public static Logger log=Logger.getLogger(Log.class);
	public static void logg(String message)
	{
		String filePath="C:\\Users\\bijja\\Desktop\\OrangeHRMApplication\\OHRM_TestNG_FrameWork\\Log4jFile\\OrangeHRMApplication_POM_LogFiles.properties";
		PropertyConfigurator.configure(filePath);
		log.info(message);
	}
}
